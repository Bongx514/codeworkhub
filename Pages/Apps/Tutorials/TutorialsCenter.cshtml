@page
@model Codeworkhub.Pages.Apps.Tutorials.TutorialsCenterModel
@{
}

<div class="min-h-screen bg-[#0d1330] text-white pt-24 pb-16 px-6">

    <h1 class="text-5xl font-extrabold text-cyan-400 text-center mb-6 tracking-wide">
        Tutorials Center
    </h1>
    <p class="text-center text-gray-300 text-lg max-w-3xl mx-auto mb-12">
        Explore our curated tutorials across multiple topics. Click on a card to start learning!
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        @foreach (var card in Model.Cards)
        {
            <a href="@card.Link" class="group relative overflow-hidden rounded-2xl shadow-2xl transform hover:scale-105 transition-all duration-500 bg-gradient-to-br from-indigo-700 via-cyan-600 to-purple-700 p-6 flex flex-col justify-between h-48">
                <div class="text-4xl mb-4">@card.Icon</div>
                <h2 class="text-2xl font-bold text-white mb-2">@card.Title</h2>
                <p class="text-gray-200 text-sm">@card.Description</p>
                <div class="absolute inset-0 bg-black/30 opacity-0 group-hover:opacity-30 transition-opacity duration-500 rounded-2xl"></div>
            </a>
        }
    </div>
</div>

<style>
    a.group:hover h2 {
        text-shadow: 0 0 15px rgba(255,255,255,0.6);
    }

    a.group p {
        transition: color 0.3s;
    }

    a.group:hover p {
        color: #ffffff;
    }
</style>
