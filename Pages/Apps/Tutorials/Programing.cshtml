@page
@model Codeworkhub.Pages.Apps.Tutorials.ProgramingModel
@{
}

<div class="pt-24 pb-16 min-h-screen bg-[#0d1330] text-white px-6">

    <h1 class="text-5xl sm:text-4xl md:text-5xl font-extrabold text-cyan-400 text-center mb-12 tracking-wide">
        Learn Programming Basics
    </h1>

    <section class="max-w-6xl mx-auto mb-12">
        <h2 class="text-3xl font-bold text-cyan-300 mb-6">Frameworks</h2>
        <div class="space-y-4">
            @foreach (var fw in Model.Frameworks)
            {
                <div class="bg-[#11214a] rounded-xl shadow-lg p-6 hover:scale-105 transition-transform duration-300">
                    <h3 class="text-2xl font-bold mb-2">@fw.Title</h3>
                    <p class="mb-2 text-gray-300">@fw.Description</p>
                    <p class="mb-2 text-gray-400">@fw.UseProsCons</p>
                    <a href="@fw.OfficialDocs" 
                       target="_blank" 
                       class="inline-block mt-2 px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-[#0d1330] font-bold rounded-lg transition-all">
                        Official Docs
                    </a>

                    <a href="@fw.VideoLink" 
                       target="_blank" 
                       class="inline-block mt-2 ml-2 px-4 py-2 bg-indigo-500 hover:bg-indigo-600 text-white font-bold rounded-lg transition-all">
                        Video Tutorial
                    </a>
                </div>
            }
        </div>
    </section>

    <section class="max-w-6xl mx-auto mb-12">
        <h2 class="text-3xl font-bold text-cyan-300 mb-6">Programming Languages</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var lang in Model.Languages)
            {
                <div class="bg-[#11214a] rounded-xl shadow-lg p-6 hover:scale-105 transition-transform duration-300">
                    <h3 class="text-2xl font-bold mb-2">@lang.Title</h3>
                    <p class="mb-2 text-gray-300">@lang.Description</p>
                    <p class="mb-2 text-gray-400">@lang.UseProsCons</p>
                    <a href="@lang.OfficialDocs" 
                       target="_blank" 
                       class="inline-block mt-2 px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-[#0d1330] font-bold rounded-lg transition-all">
                        Official Docs
                    </a>
                    <a href="@lang.VideoLink" 
                       target="_blank" 
                       class="inline-block mt-2 ml-2 px-4 py-2 bg-indigo-500 hover:bg-indigo-600 text-white font-bold rounded-lg transition-all">
                        Video Tutorial
                    </a>
                </div>
            }
        </div>
    </section>

    <section class="max-w-6xl mx-auto mb-12">
        <h2 class="text-3xl font-bold text-cyan-300 mb-6">Cloud & Deployment</h2>
        <div class="space-y-4">
            @foreach (var cloud in Model.CloudServices)
            {
                <div class="bg-[#11214a] rounded-xl shadow-lg p-6 hover:scale-105 transition-transform duration-300">
                    <h3 class="text-2xl font-bold mb-2">@cloud.Title</h3>
                    <p class="mb-2 text-gray-300">@cloud.Description</p>
                    <p class="mb-2 text-gray-400">@cloud.UseProsCons</p>
                    <a href="@cloud.OfficialDocs" 
                       target="_blank" 
                       class="inline-block mt-2 px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-[#0d1330] font-bold rounded-lg transition-all">
                        Official Docs
                    </a>

                    <a href="@cloud.VideoLink" 
                       target="_blank" 
                       class="inline-block mt-2 ml-2 px-4 py-2 bg-indigo-500 hover:bg-indigo-600 text-white font-bold rounded-lg transition-all">
                        Video Tutorial
                    </a>
                </div>
            }
        </div>
    </section>
</div>

<style>
    a:hover {
        transform: translateY(-2px);
    }

    section h2 {
        border-bottom: 2px solid #00ffff55;
        padding-bottom: 4px;
    }
</style>
