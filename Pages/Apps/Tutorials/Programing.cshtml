@page
@model Codeworkhub.Pages.Apps.Tutorials.ProgramingModel
@{
}

<div class="pt-24 pb-16 min-h-screen bg-[#0d1330] text-white px-6">

    <!-- Page Header -->
    <h1 class="text-5xl sm:text-4xl md:text-5xl font-extrabold text-cyan-400 text-center mb-12 tracking-wide">
        Learn Programming Basics
    </h1>

    <!-- FRAMEWORKS SECTION -->
    <section class="max-w-6xl mx-auto mb-12">
        <h2 class="text-3xl font-bold text-cyan-300 mb-6">Frameworks</h2>
        <div class="space-y-4">
            <!-- Angular -->
            <div class="bg-[#11214a] rounded-xl shadow-lg p-6 hover:scale-105 transition-transform duration-300">
                <h3 class="text-2xl font-bold mb-2">Angular</h3>
                <p class="mb-2 text-gray-300">A powerful front-end framework for building dynamic web apps.</p>
                <p class="mb-2 text-gray-400">Use: Web applications | Pros: TypeScript, scalable, great tooling | Cons: Steep learning curve</p>
                <a href="https://angular.io/docs" target="_blank" class="inline-block mt-2 px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-[#0d1330] font-bold rounded-lg transition-all">Official Docs</a>
                <a href="https://www.youtube.com/results?search_query=angular+tutorial+for+beginners" target="_blank" class="inline-block mt-2 ml-2 px-4 py-2 bg-indigo-500 hover:bg-indigo-600 text-white font-bold rounded-lg transition-all">Video Tutorial</a>
            </div>

            <!-- React -->
            <div class="bg-[#11214a] rounded-xl shadow-lg p-6 hover:scale-105 transition-transform duration-300">
                <h3 class="text-2xl font-bold mb-2">React</h3>
                <p class="mb-2 text-gray-300">A library for building fast, interactive UIs with components.</p>
                <p class="mb-2 text-gray-400">Use: Web and Mobile | Pros: Virtual DOM, reusable components | Cons: JSX syntax learning curve</p>
                <a href="https://reactjs.org/docs/getting-started.html" target="_blank" class="inline-block mt-2 px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-[#0d1330] font-bold rounded-lg transition-all">Official Docs</a>
                <a href="https://www.youtube.com/results?search_query=react+tutorial+for+beginners" target="_blank" class="inline-block mt-2 ml-2 px-4 py-2 bg-indigo-500 hover:bg-indigo-600 text-white font-bold rounded-lg transition-all">Video Tutorial</a>
            </div>

            <!-- .NET 8-10 -->
            <div class="bg-[#11214a] rounded-xl shadow-lg p-6 hover:scale-105 transition-transform duration-300">
                <h3 class="text-2xl font-bold mb-2">.NET 8 - 10</h3>
                <p class="mb-2 text-gray-300">A versatile framework for building web, desktop, and cloud applications.</p>
                <p class="mb-2 text-gray-400">Use: Full-stack apps | Pros: Cross-platform, high performance | Cons: Large ecosystem, heavier than JS frameworks</p>
                <a href="https://learn.microsoft.com/en-us/dotnet/" target="_blank" class="inline-block mt-2 px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-[#0d1330] font-bold rounded-lg transition-all">Official Docs</a>
                <a href="https://www.youtube.com/results?search_query=.net+tutorial+for+beginners" target="_blank" class="inline-block mt-2 ml-2 px-4 py-2 bg-indigo-500 hover:bg-indigo-600 text-white font-bold rounded-lg transition-all">Video Tutorial</a>
            </div>
        </div>
    </section>

    <!-- LANGUAGES SECTION -->
    <section class="max-w-6xl mx-auto mb-12">
        <h2 class="text-3xl font-bold text-cyan-300 mb-6">Programming Languages</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- C# -->
            <div class="bg-[#11214a] rounded-xl shadow-lg p-6 hover:scale-105 transition-transform duration-300">
                <h3 class="text-2xl font-bold mb-2">C#</h3>
                <p class="mb-2 text-gray-300">A versatile object-oriented language used in .NET applications.</p>
                <p class="mb-2 text-gray-400">Use: Desktop, Web, Games | Pros: Strong typing, IDE support | Cons: Windows-centric ecosystem</p>
                <a href="https://learn.microsoft.com/en-us/dotnet/csharp/" target="_blank" class="inline-block mt-2 px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-[#0d1330] font-bold rounded-lg transition-all">Official Docs</a>
                <a href="https://www.youtube.com/results?search_query=c%23+tutorial+for+beginners" target="_blank" class="inline-block mt-2 ml-2 px-4 py-2 bg-indigo-500 hover:bg-indigo-600 text-white font-bold rounded-lg transition-all">Video Tutorial</a>
            </div>

            <!-- C++ -->
            <div class="bg-[#11214a] rounded-xl shadow-lg p-6 hover:scale-105 transition-transform duration-300">
                <h3 class="text-2xl font-bold mb-2">C++</h3>
                <p class="mb-2 text-gray-300">A powerful low-level language for performance-critical applications.</p>
                <p class="mb-2 text-gray-400">Use: Systems, Games | Pros: Fast, memory control | Cons: Complex syntax</p>
                <a href="https://isocpp.org/get-started" target="_blank" class="inline-block mt-2 px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-[#0d1330] font-bold rounded-lg transition-all">Official Docs</a>
                <a href="https://www.youtube.com/results?search_query=c%2B%2B+tutorial+for+beginners" target="_blank" class="inline-block mt-2 ml-2 px-4 py-2 bg-indigo-500 hover:bg-indigo-600 text-white font-bold rounded-lg transition-all">Video Tutorial</a>
            </div>

            <!-- JavaScript -->
            <div class="bg-[#11214a] rounded-xl shadow-lg p-6 hover:scale-105 transition-transform duration-300">
                <h3 class="text-2xl font-bold mb-2">JavaScript</h3>
                <p class="mb-2 text-gray-300">The language of the web for building dynamic web pages.</p>
                <p class="mb-2 text-gray-400">Use: Front-end, Back-end | Pros: Easy to start, huge ecosystem | Cons: Loosely typed</p>
                <a href="https://developer.mozilla.org/en-US/docs/Web/JavaScript" target="_blank" class="inline-block mt-2 px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-[#0d1330] font-bold rounded-lg transition-all">Official Docs</a>
                <a href="https://www.youtube.com/results?search_query=javascript+tutorial+for+beginners" target="_blank" class="inline-block mt-2 ml-2 px-4 py-2 bg-indigo-500 hover:bg-indigo-600 text-white font-bold rounded-lg transition-all">Video Tutorial</a>
            </div>

            <!-- PHP -->
            <div class="bg-[#11214a] rounded-xl shadow-lg p-6 hover:scale-105 transition-transform duration-300">
                <h3 class="text-2xl font-bold mb-2">PHP</h3>
                <p class="mb-2 text-gray-300">A server-side scripting language for web development.</p>
                <p class="mb-2 text-gray-400">Use: Backend Web | Pros: Easy setup, large community | Cons: Inconsistent syntax</p>
                <a href="https://www.php.net/docs.php" target="_blank" class="inline-block mt-2 px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-[#0d1330] font-bold rounded-lg transition-all">Official Docs</a>
                <a href="https://www.youtube.com/results?search_query=php+tutorial+for+beginners" target="_blank" class="inline-block mt-2 ml-2 px-4 py-2 bg-indigo-500 hover:bg-indigo-600 text-white font-bold rounded-lg transition-all">Video Tutorial</a>
            </div>

            <!-- Node.js -->
            <div class="bg-[#11214a] rounded-xl shadow-lg p-6 hover:scale-105 transition-transform duration-300">
                <h3 class="text-2xl font-bold mb-2">Node.js</h3>
                <p class="mb-2 text-gray-300">A JavaScript runtime for building fast, scalable back-end services.</p>
                <p class="mb-2 text-gray-400">Use: Backend | Pros: Non-blocking, huge ecosystem | Cons: Callback complexity</p>
                <a href="https://nodejs.org/en/docs/" target="_blank" class="inline-block mt-2 px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-[#0d1330] font-bold rounded-lg transition-all">Official Docs</a>
                <a href="https://www.youtube.com/results?search_query=node.js+tutorial+for+beginners" target="_blank" class="inline-block mt-2 ml-2 px-4 py-2 bg-indigo-500 hover:bg-indigo-600 text-white font-bold rounded-lg transition-all">Video Tutorial</a>
            </div>
        </div>
    </section>

    <!-- CLOUD SERVICES -->
    <section class="max-w-6xl mx-auto mb-12">
        <h2 class="text-3xl font-bold text-cyan-300 mb-6">Cloud & Deployment</h2>
        <div class="space-y-4">
            <!-- Vercel -->
            <div class="bg-[#11214a] rounded-xl shadow-lg p-6 hover:scale-105 transition-transform duration-300">
                <h3 class="text-2xl font-bold mb-2">Vercel</h3>
                <p class="mb-2 text-gray-300">A cloud platform to deploy frontend frameworks and static sites.</p>
                <p class="mb-2 text-gray-400">Pros: Instant deployment, Git integration | Cons: Limited backend support</p>
                <a href="https://vercel.com/docs" target="_blank" class="inline-block mt-2 px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-[#0d1330] font-bold rounded-lg transition-all">Official Docs</a>
                <a href="https://www.youtube.com/results?search_query=vercel+tutorial+for+beginners" target="_blank" class="inline-block mt-2 ml-2 px-4 py-2 bg-indigo-500 hover:bg-indigo-600 text-white font-bold rounded-lg transition-all">Video Tutorial</a>
            </div>

            <!-- Azure -->
            <div class="bg-[#11214a] rounded-xl shadow-lg p-6 hover:scale-105 transition-transform duration-300">
                <h3 class="text-2xl font-bold mb-2">Azure</h3>
                <p class="mb-2 text-gray-300">Microsoft's cloud platform for hosting, databases, and services.</p>
                <p class="mb-2 text-gray-400">Pros: Enterprise ready, scalable | Cons: Learning curve</p>
                <a href="https://learn.microsoft.com/en-us/azure/" target="_blank" class="inline-block mt-2 px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-[#0d1330] font-bold rounded-lg transition-all">Official Docs</a>
                <a href="https://www.youtube.com/results?search_query=azure+tutorial+for+beginners" target="_blank" class="inline-block mt-2 ml-2 px-4 py-2 bg-indigo-500 hover:bg-indigo-600 text-white font-bold rounded-lg transition-all">Video Tutorial</a>
            </div>
        </div>
    </section>

</div>

<style>
    /* Hover effects */
    a:hover {
        transform: translateY(-2px);
    }

    section h2 {
        border-bottom: 2px solid #00ffff55;
        padding-bottom: 4px;
    }
</style>
