@page
@model Codeworkhub.Pages.Apps.RockPaperScissor.GameModel
@{
}

<div class="pt-24 pb-12 bg-gradient-to-br from-gray-900 to-black min-h-screen text-white">
    <h2 class="text-4xl font-extrabold text-center text-teal-400 drop-shadow-md">
        Rock • Paper • Scissors
    </h2>

    <p class="text-center mt-2 text-gray-300 italic">
        First to 2 wins — CPU unpredictable 🤖
    </p>

    <div class="max-w-xl mx-auto mt-12 bg-gray-800/50 backdrop-blur-md border border-gray-700 rounded-2xl p-8 shadow-lg space-y-6">

        <div class="text-center space-y-2">
            <p class="text-lg">Round <span class="text-teal-400 font-bold">@Model.Round</span></p>
            <p class="text-xl font-bold">
                Score: <span class="text-green-400">@Model.PlayerScore</span> - <span class="text-red-400">@Model.CpuScore</span>
            </p>
        </div>

        <form method="post" asp-page-handler="Play" class="flex justify-center gap-6 text-6xl">
            <button type="submit" name="choice" value="rock" class="hover:text-teal-400 transition-all">
                <i class="fa-solid fa-hand-fist"></i>
            </button>
            <button type="submit" name="choice" value="paper" class="hover:text-teal-400 transition-all">
                <i class="fa-solid fa-hand"></i>
            </button>
            <button type="submit" name="choice" value="scissors" class="hover:text-teal-400 transition-all">
                <i class="fa-solid fa-hand-scissors"></i>
            </button>
        </form>

        @if (!string.IsNullOrEmpty(Model.CpuChoice))
        {
            <div class="text-center mt-6">
                <p class="text-lg text-gray-300">CPU Selected:</p>
                <p class="text-4xl text-red-400 font-bold mt-2">
                    @(Model.CpuChoice == "rock" ? "🪨 Rock" :
                                    Model.CpuChoice == "paper" ? "📄 Paper" : "✂️ Scissors")
                </p>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ResultMessage))
        {
            <p class="text-center text-xl font-bold mt-4">@Model.ResultMessage</p>
        }
    </div>
</div>

@if (Model.PlayerScore == 2 || Model.CpuScore == 2)
{
    <div id="resultModal" class="fixed inset-0 flex items-center justify-center bg-black/70">
        <div class="bg-gray-900 text-white p-8 rounded-2xl shadow-2xl max-w-md text-center space-y-6 border border-teal-500">
            <h2 class="text-3xl font-extrabold text-teal-400">Winner</h2>

            <p class="text-2xl font-bold mt-4">
                @(Model.PlayerScore > Model.CpuScore ? "🎉 You Win!" : "💔 CPU Wins!")
            </p>

            <form method="post" asp-page-handler="Reset">
                <button class="mt-6 px-6 py-3 bg-teal-500 hover:bg-teal-600 text-black rounded-xl font-bold shadow-md">
                    Play Again
                </button>
            </form>
        </div>
    </div>
}