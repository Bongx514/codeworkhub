<!-- Launch Countdown Banner -->
<div id="launchBanner"
     class="w-full bg-gradient-to-r from-indigo-600 via-cyan-500 to-indigo-600 text-white
                py-4 shadow-xl animate-pulse">
    <p class="text-center font-bold tracking-wide text-xl">
        🚀 BIG LAUNCH COMING SOON — <span id="countdown" class="font-black"></span> UNTIL RELEASE!
    </p>
</div>

<script>
    function updateCountdown() {
        const launchDate = new Date("2026-01-08T00:00:00").getTime();
        const now = new Date().getTime();
        const distance = launchDate - now;

        if (distance <= 0) {
            document.getElementById("launchBanner").innerHTML =
                "<p class='text-center font-bold tracking-wide text-xl'>🚀 WE ARE LIVE! WELCOME TO THE FUTURE 🎉</p>";
            return;
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        document.getElementById("countdown").innerText =
            `${days}d ${hours}h ${minutes}m ${seconds}s`;
    }

    setInterval(updateCountdown, 1000);
    updateCountdown();
</script>