@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="min-h-screen w-full bg-gradient-to-br from-[#0a0f24] via-[#0d1330] to-[#080b18] text-white px-6 py-20">
    <div class="max-w-6xl mx-auto text-center space-y-6">
        <h1 class="text-5xl md:text-7xl font-extrabold tracking-widest drop-shadow-lg neon-text animate-pulse">
            INTERACTIVE EXPERIENCE HUB
        </h1>
        <p class="text-xl opacity-80 max-w-3xl mx-auto">
            Choose from a variety of futuristic interactive web tools and games — all powered with pure C# logic inside Razor Pages.
        </p>
    </div>

    <div class="max-w-4xl mx-auto mt-14 relative space-y-4">
        <div class="flex justify-center mb-2">
            <img src="https://cdn-icons-png.flaticon.com/512/4712/4712100.png"
                 alt="AI Bot"
                 class="w-28 h-28 animate-bounce drop-shadow-lg" />
        </div>

        <div id="aiOutput"
             class="w-full min-h-40 max-h-screen p-4 bg-[#0d1330] border border-cyan-400 text-cyan-300 rounded-2xl
            font-mono text-lg tracking-wide shadow-inner text-left overflow-y-auto whitespace-pre-line">
        </div>


        <div class="flex gap-2">
            <input id="userInput"
                   class="flex-1 p-4 bg-[#12172d] border border-cyan-600 rounded-xl text-cyan-200 font-mono"
                   placeholder="Ask something or send feedback..." />

            <button id="sendBtn"
                    class="px-6 bg-gradient-to-r from-cyan-400 to-indigo-600 hover:from-indigo-600 hover:to-purple-600
                       text-black font-semibold rounded-xl transition-transform hover:scale-105">
                Send
            </button>
        </div>
    </div>

    <!-- CARDS -->
    <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 gap-4 max-w-6xl mx-auto mt-14">
        @foreach (var card in Model.Cards)
        {
            <a href="@card.Link"
               class="group bg-[#12172d] hover:bg-[#1d2447] rounded-2xl p-3 shadow-xl border border-gray-700 hover:border-indigo-500
                          transition-all duration-500 card-glow cursor-pointer flex flex-col items-center text-center"
               data-aos="zoom-in" data-aos-duration="1000">

                <span class="text-3xl font-black opacity-60 group-hover:opacity-100 transition">@card.Icon</span>
                <h2 class="text-sm font-bold neon-blue mt-2">@card.Title</h2>
            </a>
        }
    </div>
</section>

<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>AOS.init();</script>

<script>
        const botReplies = [
            "Hi, our team is working hard to get this AI integration working, may take longer than expected do not get your hopes up...😂,",
            "LOL, seriously, come back tomorrow 😅",
            `<div>You can still try the following for now:<br>
    <a href="/Apps/MathQuiz/Quiz" class="text-cyan-400 underline hover:text-indigo-400">1. MathsQuiz</a><br>
    <a href="/Apps/RockPaperScissors/Game" class="text-cyan-400 underline hover:text-indigo-400">2. Rock Paper Scissors</a><br>
    <a href="/Apps/Typingfast/Typefast" class="text-cyan-400 underline hover:text-indigo-400">3. Typing Speed Test</a></div>`
        ];

        const output = document.getElementById("aiOutput");
        const input = document.getElementById("userInput");
        const sendBtn = document.getElementById("sendBtn");

        async function typeText(text, prefix) {
            const container = document.createElement("div");
            container.innerHTML = `<span>${prefix}</span>`;
            output.appendChild(container);

            for (let i = 0; i < text.length; i++) {
                container.innerHTML += text[i];
                output.scrollTop = output.scrollHeight;
                await new Promise(res => setTimeout(res, 35));
            }
            output.appendChild(document.createElement("br"));
        }

        async function typeHTML(html) {
            const container = document.createElement("div");
            container.innerHTML = html;
            output.appendChild(container);
            output.scrollTop = output.scrollHeight;
            await new Promise(res => setTimeout(res, 500));
        }

        async function sendMessage() {
            const text = input.value.trim();
            if (!text) return;

            output.innerHTML += `<div>🧑 You: ${text}</div>`;
            input.value = "";

            await new Promise(res => setTimeout(res, 400));

            for (const reply of botReplies) {
                // check if reply contains HTML links
                if (/<a\s+href/.test(reply)) {
                    await typeHTML(reply);
                } else {
                    await typeText(reply, "🤖 Bot: ");
                }
                await new Promise(res => setTimeout(res, 600));
            }
        }

        sendBtn.addEventListener("click", sendMessage);

        input.addEventListener("keypress", e => {
            if (e.key === "Enter") {
                e.preventDefault();
                sendMessage();
            }
        });
</script>

<style>
    .neon-text {
        text-shadow: 0 0 10px #4af3ff, 0 0 20px #4af3ff, 0 0 40px #00eaff;
    }

    .card-glow:hover {
        box-shadow: 0 0 20px #3b82f6, 0 0 40px rgba(59,130,246,0.6);
    }

    .neon-blue {
        color: #7ddcff;
    }
</style>
